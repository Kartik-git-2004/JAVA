class Solution {
    public int mySqrt(int x) {
         if (x < 2) return x;  // for 0 and 1 directly return x

        int left = 1, right = x / 2; // sqrt(x) is always <= x/2 for x > 1
        int ans = 0;

        while (left <= right) {
            int mid = left + (right - left) / 2;

            if ((long)mid * mid <= x) { // use long to prevent overflow
                ans = mid;
                left = mid + 1; // move right to find larger sqrt
            } else {
                right = mid - 1; // move left
            }
        }

        return ans;
    }
}